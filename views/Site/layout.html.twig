<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}RuWordNet{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn.rawgit.com/afeld/bootstrap-toc/v0.3.0/dist/bootstrap-toc.min.css">
        <link rel="stylesheet" href="/static/bootstrap/css/bootstrap-theme.css">
        <link rel="stylesheet" href="/static/css/layout.css?1">
    {% endblock %}
</head>
<body data-spy="scroll" data-target="#toc">

<div class="container-fluid">
    <div class="row header clearfix">
        <nav class="col-md-12 navbar">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">{{ 'navbar_brand'|trans }}</a>
                </div>
                <form class="navbar-form navbar-left"
                      id="search-form"
                      role="search"
                      action="{{ path('search') }}"
                      onsubmit="return searchFormSubmit(this);">
                    <div class="input-group">
                        <input type="text"
                               class="form-control"
                               placeholder="{{ 'search_placeholder'|trans|capitalize }}"
                               name="searchString"
                               value="{{ searchString|default('') }}"
                               id="form-search-field">
                        <span class="input-group-btn">
                                <button type="submit" class="btn btn-primary">{{ 'search'|trans|capitalize }}</button>
                            </span>
                    </div>
                </form>
                <script>
                    function searchFormSubmit(form) {
                        location.href = form.action + '/' + document.getElementById('form-search-field').value;
                        return false;
                    }
                </script>
                <div class="navbar-right">
                    {% set route = app.request.get('_route') %}
                    {% set params = app.request.get('_route_params') %}
                    {% if app.translator.locale == 'ru' %}
                        <a href="{{ path(route, params|merge({'_locale': 'en'})) }}">
                            <span class="flag">&#x1F1FA;&#x1F1F8;</span>
                            English version</a>
                    {% else %}
                        <a href="{{ path(route, params|merge({'_locale': 'ru'})) }}">
                            <span class="flag">&#x1F1F7;&#x1F1FA;</span>
                            Версия на Русском</a>
                    {% endif %}
                </div>
            </div>
        </nav>
    </div>

    <div class="row">
        <div class="col-sm-3 col-md-2">
            <nav id="toc" data-spy="affix" data-toggle="toc"></nav>
        </div>
        <div class="col-sm-9 col-md-10">
            {% block content %}{% endblock %}
        </div>
    </div>

    <footer class="row">
        <div class="col-sm-3 col-md-2"></div>
        <div class="col-sm-9 col-md-10">
            <p><strong>Developed by <a href="https://github.com/Zebradil">German Lashevich</a> 2017</strong></p>
            <p><a href="https://github.com/Zebradil/RuWordNetView">Github project page</a></p>
        </div>
    </footer>

</div> <!-- /container -->

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="https://cdn.rawgit.com/afeld/bootstrap-toc/v0.3.0/dist/bootstrap-toc.min.js"></script>
{% endblock %}
</body>
</html>